<?xml version='1.0' encoding='utf-8'?>
<widget id="io.cordova.camara" version="1.5.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
  <preference name="phonegap-version" value="cli-6.2.0" />
  <name>Example13-3</name>
  <description>
     Esto es una aplicación PhoneGap con una API de Orientación.
  </description>
  <author email="dev@cordova.apache.org" href="http://cordova.io">
      Guerrero Sandoval Edith Citlali
  </author>
  <content src="index.html" />
  <plugin name="cordova-plugin-whitelist" spec="1.3.4" />
  <plugin name="cordova-plugin-dialogs" />
  <plugin name="cordova-plugin-device" />
  <plugin name="cordova-plugin-device-orientation" />
  <access origin="*" />
  <allow-intent href="http://*/*" />
  <allow-intent href="https://*/*" />
  <allow-intent href="tel:*" />
  <allow-intent href="sms:*" />
  <allow-intent href="mailto:*" />
  <allow-intent href="geo:*" />
  <platform name="android">
      <allow-intent href="market:*" />
  </platform>
  <platform name="ios">
      <allow-intent href="itms:*" />
      <allow-intent href="itms-apps:*" />
  </platform>
</widget>
